<h1><%= @doctor.name %></h1>

<h3>Specialty: <%= @doctor.specialty %></h3>
<h3>Alma Mater: <%= @doctor.university %></h3>
<h3>Practicing Hospital: <%= @doctor.hospital.name %></h3>

<section id = 'patients'>
  <h2><%= @doctor.name %>'s Patients:</h2>
  <% @doctor.patients.each do |patient| %>
    <section id = 'patient-<%= patient.id %>'>
      <p>Name: <%= patient.name %> </p>
      <%= button_to 'Remove Patient', "/doctor_patients/#{patient.find_doctor_patient(@doctor).id}", method: :delete %><br>
    </section>
  <% end %>
</section>
